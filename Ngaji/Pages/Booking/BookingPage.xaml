<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customControls="clr-namespace:Ngaji.CustomControls"
             x:Class="Ngaji.Pages.Booking.BookingPage"
             x:Name="BookAppointment">

    <VerticalStackLayout Margin="28">
        <Label 
            Text="Tentukan Jadwal Mengajimu"
            HorizontalOptions="Center" 
            TextColor="Black"
            FontFamily="Nunito-extrabold"
            FontSize="24"/>
        <customControls:CalendarView x:Name="cal" OnDateSelected="cal_onDateSelected" />
        <BoxView 
            HeightRequest="2"
            HorizontalOptions="FillAndExpand"
            Color="#D3D3D3"
            Margin="0, 20" />
        <Label Text="Pilih Waktu Mengajimu"
                   TextColor="#313131"
                   FontFamily="Nunito-extrabold"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Start"
                   HorizontalOptions="Start" />
        
    </VerticalStackLayout>
</ContentPage>